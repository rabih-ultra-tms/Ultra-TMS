{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "ANTHROPIC_API_KEY",
    "NEXT_PUBLIC_GOOGLE_MAPS_API_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": [
        "ANTHROPIC_API_KEY",
        "NEXT_PUBLIC_GOOGLE_MAPS_API_KEY"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": [
        "NODE_ENV",
        "CARRIER_PORTAL_JWT_SECRET",
        "CARRIER_PORTAL_JWT_EXPIRES_IN",
        "CUSTOMER_PORTAL_JWT_SECRET",
        "PORTAL_JWT_SECRET",
        "PORTAL_JWT_EXPIRES_IN",
        "JWT_SECRET",
        "JEST_WORKER_ID",
        "ANTHROPIC_API_KEY",
        "NEXT_PUBLIC_GOOGLE_MAPS_API_KEY",
        "ELASTIC_NODE",
        "ELASTIC_MAX_RETRIES",
        "ELASTIC_NAME_PREFIX",
        "ELASTIC_REQUEST_TIMEOUT",
        "ELASTIC_USE_COMPAT_HEADERS"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "env": [
        "ANTHROPIC_API_KEY",
        "NEXT_PUBLIC_GOOGLE_MAPS_API_KEY"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "DATABASE_URL",
        "PORT",
        "REDIS_PASSWORD",
        "DB_USER",
        "DB_PASSWORD",
        "DB_NAME",
        "ANTHROPIC_API_KEY",
        "NEXT_PUBLIC_GOOGLE_MAPS_API_KEY"
      ]
    }
  }
}
