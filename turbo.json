{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": [
        "CARRIER_PORTAL_JWT_SECRET",
        "CARRIER_PORTAL_JWT_EXPIRES_IN",
        "PORTAL_JWT_SECRET",
        "PORTAL_JWT_EXPIRES_IN",
        "JWT_SECRET"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "DATABASE_URL",
        "PORT",
        "REDIS_PASSWORD",
        "DB_USER",
        "DB_PASSWORD",
        "DB_NAME"
      ]
    }
  }
}
