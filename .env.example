# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=ultra_tms
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ultra_tms

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_URL=redis://:redis_password@localhost:6379

# Application Configuration
NODE_ENV=development
PORT=3000

# API Configuration
API_BASE_URL=http://localhost:3000
API_SECRET_KEY=your_secret_key_here

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@ultra-tms.com

# Third-party Services (Optional)
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_secret

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Feature Flags
FEATURE_ANALYTICS=true
FEATURE_EXPORT=true

# Google Maps API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=testing
# Elasticsearch (Search Service)
ELASTIC_NODE=http://localhost:9200
ELASTIC_NAME_PREFIX=ultra
ELASTIC_MAX_RETRIES=3
ELASTIC_REQUEST_TIMEOUT=10000
